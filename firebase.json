{
  "functions": [
    {
      "source": "softeat_backend",
      "codebase": "softeat_backend_appli",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "database": {
      "port": 9000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "singleProjectMode": true
  },
  "database": {
    "rules": "emulatorFirebase/database.rules.json"
  },
  "firestore": {
    "rules": "emulatorFirebase/firestore.rules",
    "indexes": "emulatorFirebase/firestore.indexes.json"
  },
  "storage": {
    "rules": "emulatorFirebase/storage.rules"
  },
  "hosting": {
    "public": "dist/",
    "ignore": [
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
